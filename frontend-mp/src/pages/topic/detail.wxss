/* 议题详情页样式 */
.topic-detail-container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 返回按钮 */
.back-btn {
  position: fixed;
  top: 30rpx;
  left: 30rpx;
  width: 70rpx;
  height: 70rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.back-btn image {
  width: 40rpx;
  height: 40rpx;
}

/* 议题头部 */
.topic-header {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.topic-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.topic-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.topic-author {
  display: flex;
  align-items: center;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.topic-time {
  font-size: 24rpx;
  color: #999;
}

.topic-status {
  display: inline-block;
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  background-color: #f5f5f5;
  color: #666;
}

.topic-status.pending {
  background-color: #FFF3E0;
  color: #FF9800;
}

.topic-status.voting {
  background-color: #E8F5E9;
  color: #4CAF50;
}

.topic-status.approved {
  background-color: #E8F5E9;
  color: #4CAF50;
}

.topic-status.rejected {
  background-color: #FFEBEE;
  color: #F44336;
}

.topic-status.closed {
  background-color: #ECEFF1;
  color: #607D8B;
}

/* 议题内容 */
.topic-content {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  line-height: 1.6;
  font-size: 28rpx;
  color: #333;
}

/* 附件 */
.topic-attachments {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.attachment-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

.attachment-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.attachment-info {
  flex: 1;
}

.attachment-name {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.attachment-size {
  font-size: 22rpx;
  color: #999;
}

/* 投票区域 */
.topic-vote, .topic-vote-result {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.vote-deadline {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.countdown {
  color: #F44336;
  font-weight: bold;
}

.vote-options {
  margin-bottom: 20rpx;
}

.vote-option {
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
  position: relative;
}

.vote-option.voted {
  background-color: #E8F5E9;
  border: 1rpx solid #4CAF50;
}

.vote-option-content {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.vote-option-text {
  font-size: 28rpx;
  color: #333;
}

.vote-option-count {
  font-size: 24rpx;
  color: #666;
}

.vote-progress {
  height: 10rpx;
  background-color: #eee;
  border-radius: 5rpx;
  position: relative;
}

.vote-progress-bar {
  height: 100%;
  background-color: #4CAF50;
  border-radius: 5rpx;
}

.vote-progress-text {
  position: absolute;
  right: 0;
  top: -30rpx;
  font-size: 22rpx;
  color: #999;
}

.vote-total {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
}

/* 评论区域 */
.topic-comments {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.comment-list {
  margin-bottom: 20rpx;
}

.comment-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.comment-author {
  display: flex;
  align-items: center;
}

.comment-time {
  font-size: 22rpx;
  color: #999;
}

.comment-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.empty-comments {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 评论输入框 */
.comment-input-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.comment-input {
  flex: 1;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.comment-submit {
  width: 120rpx;
  height: 80rpx;
  margin-left: 20rpx;
  background-color: #4CAF50;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.comment-submit[disabled] {
  background-color: #ccc;
  color: #fff;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-container text {
  font-size: 28rpx;
  color: #999;
}

/* 错误提示 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.error-container image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.error-container text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.btn-primary {
  background-color: #4CAF50;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 40rpx;
  border-radius: 30rpx;
  border: none;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 