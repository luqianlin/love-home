/* 议题创建页样式 */
.create-topic-container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  position: relative;
}

.back-btn {
  width: 70rpx;
  height: 70rpx;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-right: 20rpx;
}

.back-btn image {
  width: 40rpx;
  height: 40rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  text-align: center;
  margin-right: 70rpx; /* 平衡返回按钮的宽度 */
}

/* 表单项 */
.form-item {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-label {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.form-label.required::before {
  content: '*';
  color: #f44336;
  margin-right: 10rpx;
}

.form-input {
  height: 80rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}

.form-textarea {
  width: 100%;
  height: 300rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.input-counter {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 选择器 */
.picker-view {
  height: 80rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker-arrow {
  width: 30rpx;
  height: 30rpx;
}

/* 附件 */
.attachment-list {
  margin-bottom: 10rpx;
}

.attachment-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}

.attachment-info {
  display: flex;
  align-items: center;
  flex: 1;
  overflow: hidden;
}

.attachment-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.attachment-name {
  font-size: 26rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex: 1;
}

.attachment-delete {
  width: 40rpx;
  height: 40rpx;
}

.attachment-delete image {
  width: 100%;
  height: 100%;
}

.add-attachment {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  border: 1rpx dashed #ccc;
}

.add-attachment image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.add-attachment text {
  font-size: 26rpx;
  color: #666;
}

.attachment-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 投票选项 */
.vote-options {
  margin-bottom: 10rpx;
}

.vote-option {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.vote-option-input {
  flex: 1;
  height: 80rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}

.vote-option-delete {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}

.vote-option-delete image {
  width: 100%;
  height: 100%;
}

.add-vote-option {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  border: 1rpx dashed #ccc;
}

.add-vote-option image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.add-vote-option text {
  font-size: 26rpx;
  color: #666;
}

.vote-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 提交按钮 */
.form-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

.btn-cancel {
  width: 45%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #f5f5f5;
  color: #666;
  font-size: 30rpx;
  border-radius: 45rpx;
  border: 1rpx solid #ddd;
}

.btn-submit {
  width: 45%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #4CAF50;
  color: #fff;
  font-size: 30rpx;
  border-radius: 45rpx;
}

.btn-submit[disabled] {
  background-color: #a5d6a7;
  color: #fff;
} 