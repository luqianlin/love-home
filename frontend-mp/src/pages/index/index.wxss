/**
 * 首页样式
 */

/* 容器 */
.container {
  padding: 0;
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 加载中 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}
.loading-icon {
  width: 40px;
  height: 40px;
  border: 2px solid #f3f3f3;
  border-top: 2px solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
.loading-text {
  margin-top: 10px;
  color: #888;
  font-size: 14px;
}

/* 页面内容 */
.page-content {
  width: 100%;
}

/* 小区头部 */
.community-header {
  background-color: #4CAF50;
  padding: 15px;
  color: white;
}
.community-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.community-name {
  font-size: 18px;
  font-weight: bold;
}
.community-switch {
  display: flex;
  align-items: center;
}
.switch-text {
  font-size: 14px;
  margin-right: 4px;
}
.switch-icon {
  font-size: 12px;
}

/* 功能导航网格 */
.grid-nav {
  display: flex;
  flex-wrap: wrap;
  padding: 15px 10px;
  background-color: white;
  margin-bottom: 10px;
}
.grid-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10px 0;
}
.grid-icon {
  width: 30px;
  height: 30px;
  margin-bottom: 8px;
}
.grid-text {
  font-size: 12px;
  color: #333;
}

/* 内容区块 */
.section {
  margin-bottom: 10px;
  background-color: white;
  border-radius: 8px;
  padding: 15px;
}
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}
.section-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}
.section-more {
  font-size: 12px;
  color: #777;
}

/* 通知列表 */
.notification-list {
  margin-bottom: 5px;
}
.notification-item {
  padding: 10px 0;
  border-bottom: 1px solid #f0f0f0;
}
.notification-item:last-child {
  border-bottom: none;
}
.notification-title {
  font-size: 14px;
  margin-bottom: 5px;
  color: #333;
}
.notification-title.urgent {
  color: #f44336;
}
.notification-time {
  font-size: 12px;
  color: #999;
}

/* 议题列表 */
.topic-list {
  margin-bottom: 5px;
}
.topic-item {
  padding: 10px 0;
  border-bottom: 1px solid #f0f0f0;
}
.topic-item:last-child {
  border-bottom: none;
}
.topic-title {
  font-size: 14px;
  margin-bottom: 5px;
  color: #333;
}
.topic-meta {
  display: flex;
  justify-content: space-between;
}
.topic-category {
  font-size: 12px;
  color: #4CAF50;
  padding: 2px 6px;
  background-color: rgba(76, 175, 80, 0.1);
  border-radius: 10px;
}
.topic-time {
  font-size: 12px;
  color: #999;
}

/* 工单列表 */
.workorder-list {
  margin-bottom: 5px;
}
.workorder-item {
  padding: 10px 0;
  border-bottom: 1px solid #f0f0f0;
}
.workorder-item:last-child {
  border-bottom: none;
}
.workorder-title {
  font-size: 14px;
  margin-bottom: 5px;
  color: #333;
}
.workorder-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.workorder-type {
  font-size: 12px;
  color: #888;
}
.workorder-status {
  font-size: 12px;
  padding: 2px 6px;
  border-radius: 10px;
}
.workorder-status.pending {
  color: #ff9800;
  background-color: rgba(255, 152, 0, 0.1);
}
.workorder-status.processing {
  color: #2196F3;
  background-color: rgba(33, 150, 243, 0.1);
}
.workorder-status.completed {
  color: #4CAF50;
  background-color: rgba(76, 175, 80, 0.1);
}
.workorder-status.timeout {
  color: #f44336;
  background-color: rgba(244, 67, 54, 0.1);
}

/* 空状态提示 */
.empty-tip {
  text-align: center;
  color: #999;
  font-size: 14px;
  padding: 20px 0;
} 