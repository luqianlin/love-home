/* 社区选择页面样式 */
.community-select-container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面标题 */
.header {
  margin-bottom: 30rpx;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 位置信息 */
.location-info {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.location-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.location-icon image {
  width: 100%;
  height: 100%;
}

.location-text {
  flex: 1;
}

.location-text .label {
  font-size: 24rpx;
  color: #999;
}

.location-text .value {
  font-size: 28rpx;
  color: #333;
}

.action-buttons {
  display: flex;
  align-items: center;
}

.refresh-btn {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  color: #4CAF50;
  border: 1px solid #4CAF50;
  border-radius: 30rpx;
  margin-right: 10rpx;
}

.choose-location-btn {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  color: #fff;
  background-color: #4CAF50;
  border-radius: 30rpx;
}

/* 区块样式 */
.section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

/* 社区卡片 */
.community-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.community-card.matched {
  border-left: 8rpx solid #4CAF50;
}

.community-card.current {
  background-color: #f0f8f0;
}

.community-info {
  flex: 1;
}

.community-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.community-address {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.community-distance {
  font-size: 24rpx;
  color: #999;
}

.community-action {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

/* 标签样式 */
.tag {
  display: inline-block;
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
  margin-left: 10rpx;
}

.tag.default {
  background-color: #4CAF50;
  color: #fff;
}

.tag.building {
  background-color: #2196F3;
  color: #fff;
}

.tag.role {
  background-color: #9E9E9E;
  color: #fff;
}

/* 按钮样式 */
.btn-switch {
  background-color: #4CAF50;
  color: #fff;
  font-size: 26rpx;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  border: none;
  margin-top: 10rpx;
}

.btn-default {
  background-color: #f5f5f5;
  color: #666;
  font-size: 26rpx;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  border: 1rpx solid #ddd;
}

.btn-success {
  background-color: #2E7D32;
}

.btn-disabled {
  opacity: 0.6;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 