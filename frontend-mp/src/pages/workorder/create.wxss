/* 工单创建页样式 */
.create-workorder-container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  position: relative;
}

.back-btn {
  width: 70rpx;
  height: 70rpx;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-right: 20rpx;
}

.back-btn image {
  width: 40rpx;
  height: 40rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  text-align: center;
  margin-right: 70rpx; /* 平衡返回按钮的宽度 */
}

/* 表单项 */
.form-item {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-label {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.form-label.required::before {
  content: '*';
  color: #f44336;
  margin-right: 10rpx;
}

.form-input {
  height: 80rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}

.form-textarea {
  width: 100%;
  height: 300rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.input-counter {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 选择器 */
.picker-view {
  height: 80rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker-arrow {
  width: 30rpx;
  height: 30rpx;
}

/* 位置输入 */
.location-input {
  display: flex;
  align-items: center;
}

.location-input .form-input {
  flex: 1;
  margin-right: 20rpx;
}

.location-btn {
  width: 80rpx;
  height: 80rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.location-btn image {
  width: 40rpx;
  height: 40rpx;
}

/* 图片上传 */
.upload-list {
  display: flex;
  flex-wrap: wrap;
}

.upload-item {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.upload-item:nth-child(3n) {
  margin-right: 0;
}

.upload-image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.upload-delete {
  position: absolute;
  top: -15rpx;
  right: -15rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-delete image {
  width: 24rpx;
  height: 24rpx;
}

.upload-add {
  width: 200rpx;
  height: 200rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx dashed #ccc;
}

.upload-add image {
  width: 60rpx;
  height: 60rpx;
}

.upload-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 提交按钮 */
.form-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

.btn-cancel {
  width: 45%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #f5f5f5;
  color: #666;
  font-size: 30rpx;
  border-radius: 45rpx;
  border: 1rpx solid #ddd;
}

.btn-submit {
  width: 45%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #4CAF50;
  color: #fff;
  font-size: 30rpx;
  border-radius: 45rpx;
}

.btn-submit[disabled] {
  background-color: #a5d6a7;
  color: #fff;
} 