/* 财务详情页样式 */
.finance-detail-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-container text {
  font-size: 28rpx;
  color: #999;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 报告头部 */
.report-header {
  background-color: #fff;
  padding: 40rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.report-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.report-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.report-type {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  background-color: #f5f5f5;
  color: #666;
}

.report-type.income {
  background-color: #E8F5E9;
  color: #4CAF50;
}

.report-type.expense {
  background-color: #FFEBEE;
  color: #F44336;
}

.report-type.summary {
  background-color: #E3F2FD;
  color: #2196F3;
}

.report-date {
  font-size: 24rpx;
  color: #999;
}

/* 报告概要 */
.report-summary {
  background-color: #fff;
  padding: 30rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}

.summary-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.summary-label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.summary-value {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.summary-value.amount {
  font-size: 36rpx;
}

.amount.income {
  color: #4CAF50;
}

.amount.expense {
  color: #F44336;
}

/* 报告内容 */
.report-content {
  background-color: #fff;
  padding: 30rpx;
  margin-top: 20rpx;
}

.content-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  position: relative;
  padding-left: 20rpx;
}

.content-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 6rpx;
  width: 8rpx;
  height: 30rpx;
  background-color: #4CAF50;
  border-radius: 4rpx;
}

.content-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 30rpx;
}

/* 财务明细表格 */
.finance-table {
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  margin: 20rpx 0 30rpx;
  overflow: hidden;
}

.table-header {
  display: flex;
  background-color: #f5f5f5;
  font-weight: bold;
  font-size: 26rpx;
  color: #333;
}

.table-row {
  display: flex;
  border-top: 1rpx solid #eee;
}

.table-footer {
  display: flex;
  background-color: #f9f9f9;
  font-weight: bold;
  border-top: 1rpx solid #eee;
}

.table-cell {
  flex: 1;
  padding: 20rpx;
  text-align: center;
  font-size: 26rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.table-cell:nth-child(3) {
  text-align: right;
}

/* 附件列表 */
.attachments {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.attachment-list {
  background-color: #f9f9f9;
  border-radius: 10rpx;
  padding: 10rpx;
}

.attachment-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}

.attachment-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.attachment-info {
  flex: 1;
  overflow: hidden;
}

.attachment-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
}

.attachment-size {
  font-size: 24rpx;
  color: #999;
}

.attachment-download {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.attachment-download image {
  width: 36rpx;
  height: 36rpx;
}

/* 发布者信息 */
.publisher-info {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-top: 1rpx solid #eee;
  margin-top: 30rpx;
}

.publisher-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.publisher-detail {
  display: flex;
  flex-direction: column;
}

.publisher-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.publisher-role {
  font-size: 24rpx;
  color: #999;
}

/* 评论区 */
.comments-section {
  background-color: #fff;
  padding: 30rpx;
  margin-top: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.comments-list {
  margin-bottom: 20rpx;
}

.comment-item {
  display: flex;
  margin-bottom: 30rpx;
}

.comment-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.comment-content {
  flex: 1;
  overflow: hidden;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.comment-username {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
}

.comment-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 10rpx;
  word-break: break-all;
}

.comment-actions {
  display: flex;
  margin-top: 10rpx;
}

.action-like, .action-reply {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
  font-size: 24rpx;
  color: #999;
}

.action-like image, .action-reply image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 6rpx;
}

.action-like.liked {
  color: #4CAF50;
}

/* 回复列表 */
.replies-list {
  background-color: #f9f9f9;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.reply-item {
  margin-bottom: 15rpx;
}

.reply-item:last-child {
  margin-bottom: 0;
}

.reply-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  word-break: break-all;
}

.reply-username {
  color: #4CAF50;
  font-weight: bold;
}

.reply-to {
  margin: 0 6rpx;
}

.reply-to-username {
  color: #2196F3;
  font-weight: bold;
}

.reply-time {
  font-size: 22rpx;
  color: #999;
  display: block;
  margin-top: 6rpx;
}

/* 无评论提示 */
.no-comments {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.no-comments image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.no-comments text {
  font-size: 28rpx;
  color: #999;
}

/* 错误提示 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 0 60rpx;
}

.error-container image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.error-container text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 30rpx;
}

.btn-retry {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #4CAF50;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
}

/* 评论输入框 */
.comment-input-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
}

.comment-input {
  flex: 1;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.send-btn {
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
  margin-left: 20rpx;
}

.send-btn.active {
  color: #4CAF50;
  font-weight: bold;
} 