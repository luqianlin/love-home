/* 财务列表页样式 */
.finance-list-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  position: relative;
  padding-top: 100rpx;
}

/* 搜索和筛选栏 */
.search-filter-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  padding: 20rpx 30rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.search-box {
  flex: 1;
  height: 70rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  margin-right: 20rpx;
}

.search-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.search-input {
  flex: 1;
  height: 70rpx;
  font-size: 28rpx;
}

.search-clear {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-clear image {
  width: 24rpx;
  height: 24rpx;
}

.filter-btn {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.filter-btn image {
  width: 40rpx;
  height: 40rpx;
}

/* 筛选面板 */
.filter-panel {
  position: fixed;
  top: 100rpx;
  right: -80%;
  width: 80%;
  height: 100vh;
  background-color: #fff;
  z-index: 101;
  padding: 30rpx;
  box-sizing: border-box;
  transition: all 0.3s ease;
  box-shadow: -2rpx 0 10rpx rgba(0, 0, 0, 0.1);
}

.filter-panel.show {
  right: 0;
}

.filter-section {
  margin-bottom: 30rpx;
}

.filter-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
}

.filter-option {
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.filter-option.active {
  background-color: #e8f5e9;
  color: #4CAF50;
  border: 1rpx solid #4CAF50;
}

.filter-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.btn-reset {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f5f5f5;
  color: #666;
  font-size: 28rpx;
  border-radius: 40rpx;
}

.btn-confirm {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #4CAF50;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
}

/* 遮罩层 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

/* 财务统计卡片 */
.finance-summary {
  background-color: #fff;
  margin: 20rpx 30rpx;
  padding: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.summary-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.summary-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.summary-period {
  font-size: 26rpx;
  color: #999;
}

.summary-content {
  display: flex;
  justify-content: space-between;
}

.summary-item {
  flex: 1;
  text-align: center;
}

.item-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.item-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.item-value.income {
  color: #4CAF50;
}

.item-value.expense {
  color: #F44336;
}

/* 财务报告列表 */
.finance-list {
  height: calc(100vh - 100rpx);
  width: 100%;
  box-sizing: border-box;
  padding-bottom: 120rpx;
}

.finance-item {
  background-color: #fff;
  margin: 20rpx 30rpx;
  padding: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.finance-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.finance-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.finance-type {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  background-color: #f5f5f5;
  color: #666;
}

.finance-type.income {
  background-color: #E8F5E9;
  color: #4CAF50;
}

.finance-type.expense {
  background-color: #FFEBEE;
  color: #F44336;
}

.finance-type.summary {
  background-color: #E3F2FD;
  color: #2196F3;
}

.finance-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.finance-info {
  flex: 1;
}

.info-item {
  display: flex;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.info-label {
  color: #999;
}

.finance-amount {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.finance-amount.income {
  color: #4CAF50;
}

.finance-amount.expense {
  color: #F44336;
}

.finance-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.finance-category {
  background-color: #f5f5f5;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.finance-comments {
  display: flex;
  align-items: center;
}

.finance-comments image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 6rpx;
}

/* 空列表 */
.empty-list {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-list image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-list text {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 10rpx;
}

.loading text {
  font-size: 24rpx;
  color: #999;
}

.load-all {
  text-align: center;
  padding: 30rpx 0;
  font-size: 24rpx;
  color: #999;
}

/* 下载按钮 */
.download-btn {
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #4CAF50;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 10rpx rgba(76, 175, 80, 0.3);
  z-index: 99;
}

.download-btn image {
  width: 50rpx;
  height: 50rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 